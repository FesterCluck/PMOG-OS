<div id="brain_buster_captcha" class="signupElement">
  <%= hidden_field_tag :captcha_id, @captcha.id %>

  <label for="captcha_answer">
    Spam protection: <%= @captcha.question %>
  </label>
  <span class="form_field">
    <% iTag = text_field_tag :captcha_answer, params[:captcha_answer], :size => 10, :maxlength => 40 %>
    <% if not @user.errors[:captcha_answer].nil? %>
      <div class="fieldWithErrors">
        <%= iTag %>
      </div>
      <span class="form_error_message"><%= @user.errors[:captcha_answer] %></span>
    <% else %>
      <%= iTag %>
    <% end %>
  </span>
  <div class="extendThis">To make sure you're carbon based.</div>
</div>