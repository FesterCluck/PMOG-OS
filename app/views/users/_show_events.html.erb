	    <li><a href="#events_rivals" onclick="reloadPanel('events', 'rivals');"><span>Rivals</span></a></li>
	  <% end %>
  </ul>
  <!-- EVENTS Players -->
  <div id="events_players">
    <%= render :partial => "/users/show_events_list", :locals => {:panel => 'players', :events => @events}%>
  </div>
	<% if show_content?(@user, current_user, Preference.preferences[:acquaintances][:text])  %>
	  <!-- EVENTS contacts -->
	  <div id="events_contacts">
	  </div>
  	<!-- EVENTS allies -->
 		<div id="events_allies">
