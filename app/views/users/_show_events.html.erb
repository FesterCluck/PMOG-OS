  <ul>
    <li><%= render :partial => "shared/spinner", :locals => { :spinner_id => "events_panel_spinner" } %></li>
    <li><a href="#events_players" onclick="reloadPanel('events', 'players');"><span><%= @user.login %>'s</span></a></li>
