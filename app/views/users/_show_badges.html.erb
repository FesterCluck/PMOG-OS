				<% if @random_badge %>
				<p><a href="/guide/badges/<%= @random_badge.url_name %>"><img src="/images/shared/badges/small/<%= @random_badge.image %>" alt="<%= @random_badge.name %>" width="39" height="50" /></a><br/>
					<a href="/guide/badges/<%= @random_badge.url_name %>"><%= @random_badge.name %></a></p>
					<% end %>
				-->
				<% end %>
			</div>

		</div>
	</div>
