<%= error_messages_for :feed %>

<% if params[:bird_bot_id] %>

	<% form_for :feed, @npc, :url => bird_bot_feeds_path(params[:bird_bot_id]) do |f| %>
	  <%= f.hidden_field :bird_bot_id, :value => params[:bird_bot_id] %>
	  <p>
	    <b>Feed url</b>
	    <br/>
	    <%= f.text_field :url, :size => 50 %>
	    <script type="text/javascript">
	      $( 'feed_url' ).focus();
	    </script>
	    <%= submit_tag "Add" %>
	  </p>
	<% end %>

<% elsif params[:npc_id] %>

	<% form_for :feed, @npc, :url => npc_feeds_path(params[:npc_id]) do |f| %>
	  <%= f.hidden_field :npc_id, :value => params[:npc_id] %>
	  <p>
	    <b>Feed url</b>
	    <br/>
	    <%= f.text_field :url, :size => 50 %>
	    <script type="text/javascript">
	      $( 'feed_url' ).focus();
	    </script>
	    <%= submit_tag "Add" %>
	  </p>
	<% end %>

<% end %>