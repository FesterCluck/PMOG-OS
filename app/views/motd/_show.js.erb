<div class="pmog_action">
  <%= render :partial => "shared/ext/button_close", :locals => { :window_id => @window_id } %>
  <%= render :partial => 'shared/ext/progress_throbber', :locals => { :throbber_id => @window_id } %>
  <div class="pmog_action_link"><a href="<%= host %>">PMOG</a></div>
  <div class="pmog_message_text">
    <b>Message Of The Day</b>
    <br/>
    <br/>
    <%= format( @motd.body ) %>
    <br/>
    <a onclick="<%= render :partial => 'shared/ext/overlay_init' %>
              pmog_m.setAttribute('server_url', '/motd/<%= @motd.id %>/dismiss.json');
              pmog_m.setAttribute('method', 'post');
              pmog_m.setAttribute('action', 'submit');
              pmog_m.setAttribute('window_id', '<%= @window_id %>');
              pmog_m.setAttribute('params', '{\'window_id\' : \'<%= @window_id %>\'}');
              pmog_m.dispatchEvent(pmog_e);
              <%= render :partial => 'shared/ext/progress_throbber_trigger', :locals => { :throbber_id => @window_id } %>
              return false;" class="pmog_button_dismiss" href="#">&nbsp;</a>
  </div>  
</div>
<br style="clear:both;">