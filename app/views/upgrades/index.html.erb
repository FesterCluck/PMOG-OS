<% content_for :breadcrumbs do %>
	<div id="breadcrumbs">
		<%= render :partial => "shared/breadcrumbs/admin" %>
		<div class="cell child"><span class="l"></span><span class="c">Edit Upgrades</span><span class="r"></span></div>
	</div>
<% end %>
		<div id="copy">
		
			<div class="column width960">

				<div class="column width700">

					<div class="module width700">

<h1>Edit Upgrades <small>(<a href="/guide/upgrades">view guide/upgrades</a>)</small></h1>

<h4><a href="/tools">Edit Tools</a></h4>

<ul>
	<% @upgrades.each do |upgrade| %>
	<li>
		<h3><img src="<%= upgrade.icon_image %>" width="16" height="16" alt="<%= upgrade.icon_image %>" />
		<%= upgrade.name.pluralize.titleize %> [<%= upgrade.url_name %>] - (<a href="/guide/upgrades/<%= upgrade.url_name %>">View</a> or <%= link_to "Edit " + upgrade.name, edit_upgrade_path(upgrade) %>)</h3>
		<p>
			<b>Short description:</b><br>
			 <%= upgrade.short_description %>
		</p>
		<p>
			<b>Long description:</b><br>
			 <%= upgrade.long_description %>
		</p>
		<p>
			<b>Icon image path:</b>
			 <a href="<%= upgrade.icon_image %>"><%= upgrade.icon_image %></a>
			 <img src="<%= upgrade.icon_image %>" width="16" height="16" alt="<%= upgrade.icon_image %>" />
		</p>
		<p>
			<b>Small image path:</b>
			 <a href="<%= upgrade.small_image %>"><%= upgrade.small_image %></a>
			 <img src="<%= upgrade.small_image %>" width="16" height="16" alt="<%= upgrade.small_image %>" />
		</p>
		<p>
			<b>Medium image path:</b>
			 <a href="<%= upgrade.medium_image %>"><%= upgrade.medium_image %></a>
			 <img src="<%= upgrade.medium_image %>" width="16" height="16" alt="<%= upgrade.medium_image %>" />
		</p>
		<p>
			<b>Large image path:</b>
			 <a href="<%= upgrade.large_image %>"><%= upgrade.large_image %></a>
			 <img src="<%= upgrade.large_image %>" width="16" height="16" alt="<%= upgrade.large_image %>" />
		</p>
		<p>
			<b>DP Cost:</b>
			<%= upgrade.dp_cost %> <%= dp_icon %>
		</p>
		<p>
			<b> Ping Cost:</b>
			<%= upgrade.ping_cost %> <%= ping_icon %>
		</p>
    <p>
      <b> Classpoints:</b>
      <%= upgrade.classpoints %> <%= cp_icon %>
    </p>
		<p>
			<b> Armor Cost:</b>
			<%= upgrade.armor_cost %>
		</p>
		<p>
			<b> Crate Cost:</b>
			<%= upgrade.crate_cost %>
		</p>
		<p>
			<b> Lightpost Cost:</b>
			<%= upgrade.lightpost_cost %>
		</p>
		<p>
			<b> Mine Cost:</b>
			<%= upgrade.mine_cost %>
		</p>
		<p>
			<b> Portal Cost:</b>
			<%= upgrade.portal_cost %>
		</p>
		<p>
			<b> St. Nick Cost:</b>
			<%= upgrade.st_nick_cost %>
		</p>
    <p>
      <b>Misc:</b>
      <%= upgrade.misc %>
    </p>
   </li>
   <br />
	<% end %>
</ul>
