<% content_for :breadcrumbs do %>
	<div id="breadcrumbs">
		<%= render :partial => "shared/breadcrumbs/admin" %>
		<div class="cell child"><span class="l"></span><span class="c">Change User Password</span><span class="r"></span></div>
	</div>
<% end %>
		<div id="copy">
		
			<div class="column width960">

				<div class="column width700">

					<div class="module width700">

<h1>Change User Password</h1>
<p>
	<i>Well, they were caught without a password...well how about that?</i>
</p>
<p>
  <a href="/admin/change_user_login/<%= params[:login] %>">edit login instead</a>
</p>
<%= error_messages_for :user %>
<% form_tag('/admin/change_user_password') do %>
	<table>
		<tr>
			<td>
				<%= label_tag 'login' %>
			</td>
			<td>
				<%= text_field_tag 'login', params[:login] %>
			</td>
		</tr>
		<tr>
			<td>
				<%= label_tag 'password' %>
			</td>
			<td>
				<%= password_field_tag 'password' %>
			</td>
		</tr>
		<tr>
			<td>
				<%= label_tag 'password_confirmation' %>
			</td>
			<td>
				<%= password_field_tag 'password_confirmation' %>
			</td>
		</tr>
	</table>
	<%= submit_tag 'Change Password' %>
<% end %>


						</div>
											
					</div>
				
				</div>
			
			</div>
