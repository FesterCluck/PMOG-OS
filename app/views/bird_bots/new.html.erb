<h1>New bird_bot</h1>

<%= error_messages_for :bird_bot %>

<% form_for(:bird_bot, :url => bird_bots_path) do |f| %>
	<p><label for="name">Name</label><br/>
	<%= f.text_field :name %></p>

  <script type="text/javascript">
    $( 'bird_bot_name' ).focus();
  </script>

	<p><label for="description">Description</label><br/>
	<%= f.text_area :description %></p>

	<p><label for="first_words">First words</label><br/>
	<%= f.text_field :first_words %></p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', bird_bots_path %>