<% if @buddies.empty? %>
	
	<h1 align="center">You have no pending requests!</h1>

<% end %>

<% @buddies.reverse.each do |buddy| %>	

  <% if buddy.requires_approval( current_user.id, 'acquaintance' ) %>

    <div class="acquaintances_list_entry" style="border-bottom:3px solid #aa967a;">
  
      <div class="acquaintances_list_avatar">
        <%= avatar_link_to_user :user => buddy, :size => 'small' %>
      </div>
  
	    <a href="/users/<%= buddy.login %>" class="acquaintance_name"><%= buddy.login %></a>
			
	    <br />
	
	    <span class="acquaintances_list_details">
	
	      <b>Level:</b> <%= @user.current_level %> | <b>Associations:</b> <%= @user.primary_association.titleize %>, <%= @user.secondary_association.titleize %>, <%= @user.tertiary_association.titleize %>
	
	    </span>
	
	    <br /><br />
					
      <h5 align="right">
				<a href='/acquaintances/approve/<%= buddy.login %>?type=acquaintance'>Approve</a> | <a href='/acquaintances/remove/<%= buddy.login %>?type=acquaintance'>Remove</a>
	    </h5>

    </div>
  
  <% end %>

<% end %>