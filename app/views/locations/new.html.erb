<%= error_messages_for :location %>

<% if params[:bird_bot_id] %>

	<% form_for :location, @npc, :url => bird_bot_locations_path(params[:bird_bot_id]) do |f| %>
	  <%= f.hidden_field :bird_bot_id, :value => params[:bird_bot_id] %>
	  <p>
	    <b>Location url</b>
	    <br/>
	    <%= f.text_field :url, :size => 50 %>
	    <script type="text/javascript">
	      $( 'location_url' ).focus();
	    </script>
	    <%= submit_tag "Add" %>
	  </p>
	<% end %>

<% elsif params[:npc_id] %>

	<% form_for :location, @npc, :url => npc_locations_path(params[:npc_id]) do |f| %>
	  <%= f.hidden_field :npc_id, :value => params[:npc_id] %>
	  <p>
	    <b>Location url</b>
	    <br/>
	    <%= f.text_field :url, :size => 50 %>
	    <script type="text/javascript">
	      $( 'location_url' ).focus();
	    </script>
	    <%= submit_tag "Add" %>
	  </p>
	<% end %>

<% end %>