<% content_for :head do %>
	<%= stylesheet_link_tag '/css/supplemental-missions' %>
	<% end %>

	<% content_for :breadcrumbs do %>
	<div id="breadcrumbs">
		<%= render :partial => "shared/breadcrumbs/mission_generator" %>
		<div class="cell child"><span class="l"></span><span class="c"><%= @mission.name %></span><span class="r"></span></div>
	</div>
	<% end %>

	<div id="copy">

		<div class="column width960">

			<div class="column width700">

				<div class="module width700">
					<h2>Edit your Mission</h2>
					<h4 style="margin-top:-7px;">Great Missions Take Time :)</h4>

					<%= render :partial => 'generator_progress' %>


					<%# Present the form proper %>
					<h2><% form_for(:mission, :url => mission_path(:id => @mission.url_name), :html => { :method => :put, :id => "mission_form", :onsubmit => "return false"} ) do |form| %></h2><br/>
					<div class="height20"></div>				
					<h2><%= render :partial => "form", :locals => { :form => form } %></h2>
				
<span style="font-size:12px; "> <%= submit_tag "Proceed to Step 2", :disable_with => "Please wait...", :class => "input generator_submit", :onclick => "this.form.submit()" %> &nbsp; 
					<%= link_to "Delete This Mission", mission_path(@mission), :method => :delete, :confirm => "Are you sure? This cannot be undone" %></span>

					<% end %> <!-- form -->

				</div>
