<h1>New npc</h1>

<%= error_messages_for :npc %>

<% form_for(:npc, :url => npcs_path) do |f| %>
	<p><label for="name">Name</label><br/>
	<%= f.text_field :name %></p>

  <script type="text/javascript">
    $( 'npc_name' ).focus();
  </script>

	<p><label for="description">Description</label><br/>
	<%= f.text_area :description %></p>

	<p><label for="first_words">First words</label><br/>
	<%= f.text_field :first_words %></p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', npcs_path %>