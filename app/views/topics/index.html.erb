<h1>Listing topics</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  
<% for topic in @topics %>
  <tr>
    <td><%=h topic.title %></td>
    <td><%=h topic.description %></td>
    <td><%= link_to 'Show', forum_topic_path(topic) %></td>
    <td><%= link_to 'Edit', edit_forum_topic_path(topic) if site_admin? or current_user == topic.user %></td>
    <td><%= link_to 'Destroy', forum_topic_path(topic), :confirm => 'Are you sure?', :method => :delete if site_admin? or current_user == topic.user %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New topic', new_forum_topic_path %>