<h1>New topic</h1>

<%= error_messages_for :topic %>

<% form_for(:topic, :url => forum_topics_path) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', forum_topics_path %>