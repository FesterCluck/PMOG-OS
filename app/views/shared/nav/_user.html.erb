  <li><input type="password" id="passOn" class="hidden" name='password' class="input user_login_textbox" size="10" /></li>
  <li><input type="submit" value="login" class="input user_login_submit" /></li>
  <li class="sep">|</li>
  <li><%= link_to "OpenID", new_openid_path %></li>
  <li class="sep">|</li>
  <li><a href="/sessions/find">Forgot Password?</a></li>
  <li class="sep">|</li>
  <li><%= link_to "Sign up", new_user_path %></li>
  <% end %><!--form-->

<% end %><!--user logged in-->

</ul>
        </div>

