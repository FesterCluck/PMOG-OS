<div id="navUser" class="module">
<ul class="font12px">
<% if logged_in? %>
  <!--<a href="" class="blue">????-->
  <li>Welcome <%= link_to "#{current_user.login}", user_path(current_user) %></li>
  <li class="sep">|</li>
  <li><a href="/users/<%= current_user.login %>/edit">Edit Your Profile</a></li>
  <li class="sep">|</li>
  <li><a href="/invite/invite_forward">Invite Friends</a></li>
  <li class="sep">|</li>
  <li><a href="http://news.thenethernet.com/category/releases">Toolbar Updates</a></li>
  <li class="sep">|</li>
