<h2>Unsubscribe from The Nethernet Mail Notifications</h2>
<p>
	Fret not, we'll make this process as painless as possible!
</p>

<% if logged_in? %>
<div id="logged_in">
	<p>Hello, <strong><%= @user.login %></strong>!</p>
	<p>Click the <strong>unsubscribe</strong> button below and we'll send you an email with a link to confirm
	   your request to unsubscribe!
	</p>
	<% form_tag(:action=>'new_request') do %>
      <%= hidden_field_tag('user_id', @user.id) %>

      <%= submit_tag "Unsubscribe", :class => "input" %>
    <% end %>
</div>
<% else %>
	<% if params[:email].nil? then email = "you@domain.com" else email = params[:email] end %>
	<p>Hello, <strong>Stranger</strong>!</p>
	<p>Before we can get started on the unsubscribing path, enter your email address below and we'll send you an email
	   with a link to confirm your request to unsubscribe</p>
	   
	  <% form_tag(:action=>'new_request') do %>
      <%= text_field(:user, :email, :class => 'input', :value => email) %>

      <%= submit_tag "Unsubscribe", :class => "input" %>
    <% end %>
<% end %>