<% content_for :breadcrumbs do %>
	<div id="breadcrumbs">
		<%= render :partial => "shared/breadcrumbs/admin" %>
		<div class="cell child"><span class="l"></span><span class="c">Edit Abilities</span><span class="r"></span></div>
	</div>
<% end %>
		<div id="copy">
		
			<div class="column width960">

				<div class="column width700">

					<div class="module width700">

<h1>Edit Abilities <small>(<a href="/guide/abilities">view guide/abilities</a>)</small></h1>

<ul>
	<% @abilities.each do |ability| %>
	<li>
		<h3><img src="<%= ability.icon_image %>" width="16" height="16" alt="<%= ability.icon_image %>" />
		<%= ability.name.pluralize.titleize %> [<%= ability.url_name %>] - (<a href="/guide/abilities/<%= ability.url_name %>">View</a> or <%= link_to "Edit " + ability.name, edit_ability_path(ability.id) %>)</h3>
		<p>
			<b>Short description:</b><br>
			 <%= ability.short_description %>
		</p>
		<p>
			<b>Long description:</b><br>
			 <%= ability.long_description %>
		</p>
		<p>
			<b>Icon image path:</b>
			 <a href="<%= ability.icon_image %>"><%= ability.icon_image %></a>
			 <img src="<%= ability.icon_image %>" width="16" height="16" alt="<%= ability.icon_image %>" />
		</p>
		<p>
			<b>Small image path:</b>
			 <a href="<%= ability.small_image %>"><%= ability.small_image %></a>
			 <img src="<%= ability.small_image %>" width="16" height="16" alt="<%= ability.small_image %>" />
		</p>
		<p>
			<b>Medium image path:</b>
			 <a href="<%= ability.medium_image %>"><%= ability.medium_image %></a>
			 <img src="<%= ability.medium_image %>" width="16" height="16" alt="<%= ability.medium_image %>" />
		</p>
		<p>
			<b>Large image path:</b>
			 <a href="<%= ability.large_image %>"><%= ability.large_image %></a>
			 <img src="<%= ability.large_image %>" width="16" height="16" alt="<%= ability.large_image %>" />
		</p>
		<p>
			<b>DP Cost:</b>
			<%= ability.dp_cost %> <%= dp_icon %>
		</p>
		<p>
			<b>Ping Cost:</b>
			<%= ability.ping_cost %> <%= ping_icon %>
		</p>
    <p>
      <b>Percentage:</b>
      <%= ability.percentage %>%
    </p>
    <p>
      <b>Value:</b>
      <%= ability.value %>
    </p>
    <p>
      <b>Misc:</b>
      <%= ability.misc %>
    </p>
	</li>
	<br />
	<% end %>
</ul>

						</div>
											
					</div>
				
				</div>

    				<div class="column width240">
				</div>

			
			</div>

			<div class="column width960">
			
			<%= render :partial => "shared/guide/abilities" %>
				
			<%= render :partial => "shared/guide/guide_module" %>
			
			</div>
